<html lang="en">
<head>
    <%- include('./partials/head.ejs')%>
    <style>
        body{
            background-color:   #ddd;
        }
        .con:hover{
            box-shadow:  8px 8px 6px #45464A,
               -8px -8px 6px #45464A;
        }
    </style>
</head>
<body>  
    
      <%- include('./partials/navbar.ejs')%>
      <div class="content-container">
        <div class="content">
                   
                    <div class="container">
                            <div class="row">
                                <% for(i = count-1; i >= 0 ; i--){ %>   
                                    <div class="col-12 bg-light mt-3 con">
                                            <div class="container-fluid">
                                                <div class="row">
                                                    <div class="col-4 col-md-2 p-2">
                                                    <img src = '../uploads/<%=product[i].image%>' class="img-fluid">
                                                    </div>
                                                    <div class="col-4 col-md-4 p-2">
                                                      <div class="d-flex justify-content-between">
                                                        <a href="/product/<%=product[i]._id%>"><%=product[i].name%></a>
                                                        <a>Rs.<%=orders[i].price%></a>

                                                      </div>                                                     
                                                   <a>Seller: <%=seller[i].name%></a>
                                                    </div>
                                                    <div class="col-4 col-md-6 d-flex justify-content-center p-2">
                                                       <h6>Ordered on: <%=orders[i].date%></h6>
                                                    </div>
                                                </div>
                                            </div>
                                    </div>          <% } %>
                            </div>
                    </div>
          
        </div>
    </div>
    
    
</body>
</html> 